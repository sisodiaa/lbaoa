<div class='row'>
  <div class="col-lg-6 col-12">
    <div class="pod rounded shadow-sm">
      <h2>Change your password</h2>

      <%= form_for(
        resource,
        as: resource_name,
        url: password_path(resource_name),
        html: { method: :put },
        data: { controller: 'form-validation-error' }
      ) do |f| %>
        <%= render "account/members/shared/error_messages", resource: resource do %>
          <div class="field_with_errors my-3">
            <div
              data-target="form-validation-error.attribute"
              data-form-attribute="reset_password_token"
            >
            </div>
          </div>
        <% end %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "New password" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field(
            :password,
            autofocus: true,
            autocomplete: "new-password",
            class: 'form-control',
            data: {
              target: 'form-validation-error.attribute',
              form_attribute: 'password'
            }
          ) %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field(
            :password_confirmation,
            autocomplete: "new-password",
            class: 'form-control',
            data: {
              target: 'form-validation-error.attribute',
              form_attribute: 'password_confirmation'
            }
          ) %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>

    <hr>

    <div class="podlet rounded shadow-sm p-3">
      <%= render "account/members/shared/links" %>
    </div>
  </div>
</div>
