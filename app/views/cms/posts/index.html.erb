<p id="notice"><%= notice %></p>

<div class="row">
  <div class="pod col rounded shadow-sm">
    <h1>Posts</h1>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Stauts</th>
          <th scope="col">Department</th>
          <th colspan="4" scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.publication_state %></td>
            <td><%= post.department.title %></td>
            <td><%= link_to 'Show', cms_post_path(post) %></td>
            <td><%= link_to 'Edit', edit_cms_post_path(post) %></td>
            <td>
              <%= link_to 'Destroy',
                          cms_post_path(post),
                          method: :delete,
                          data: { confirm: 'Are you sure?' }
              %>
            </td>
            <td>
              <%= link_to 'Manage attachments', cms_post_documents_path(post) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Post', new_cms_post_path, class: "btn btn-outline-primary" %>
  </div>
</div>
