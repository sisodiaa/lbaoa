<%= render partial: 'cms_sidebar_posts', locals: { status: @status } %>

<div class="posts row">
  <div class="pod col-12 rounded shadow-sm">
    <table class="posts__table table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr class='posts__table-row'>
            <td><%= link_to post.title, cms_post_path(post) %></td>
            <td class="text-capitalize"><%= post.category.title %></td>
            <td class="btn-group btn-group-sm" role="group">
              <%= link_to 'Edit',
                          edit_cms_post_path(post),
                          class: "btn btn-secondary"
              %>
              <%= link_to 'Attachments',
                          post_documents_path(post),
                          class: 'btn btn-secondary'
              %>
              <%= link_to 'Destroy',
                          cms_post_path(post),
                          method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: 'btn btn-secondary'
              %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
