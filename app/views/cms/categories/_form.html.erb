<%= form_with(
  model: ['cms', category],
  local: true,
  data: { controller: 'form-validation-error' }
) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <% category.errors.messages.each do |attribute, error_messages| %>
        <div
          data-target="form-validation-error.error"
          data-error-attribute="<%= attribute %>"
        >
          <% error_messages.each do |error_message| %>
            <div data-error-message="<%= error_message %>"></div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%= render 'shared/invalid_feedback' %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field(
      :title,
      class: "form-control",
      data: {
        target: 'form-validation-error.attribute',
        form_attribute: 'title'
      }
    ) %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area(
      :description,
      class: "form-control",
      data: {
        target: 'form-validation-error.attribute',
        form_attribute: 'description'
      }
    ) %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
