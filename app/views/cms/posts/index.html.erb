<p id="notice"><%= notice %></p>

<div class="posts row">
  <div class="pod col rounded shadow-sm">
    <h1 class='posts__heading'>Posts</h1>

    <table class="posts__table table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Stauts</th>
          <th scope="col">Department</th>
          <th colspan="4" scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr class='posts__table-row'>
            <td><%= post.title %></td>
            <td style="text-transform: capitalize;">
              <%= post.publication_state %>
            </td>
            <td><%= post.department.title %></td>
            <% if post.draft? %>
              <td><%= link_to 'Show', cms_post_path(post) %></td>
              <td><%= link_to 'Edit', edit_cms_post_path(post) %></td>
              <td>
                <%= link_to 'Destroy',
                            cms_post_path(post),
                            method: :delete,
                            data: { confirm: 'Are you sure?' }
                %>
              </td>
              <td>
                <%= link_to 'Manage attachments',
                            cms_post_documents_path(post)
                %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Post', new_cms_post_path, class: "btn btn-outline-primary" %>
  </div>
</div>
